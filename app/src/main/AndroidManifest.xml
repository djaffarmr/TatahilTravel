<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tatahil.app">

    <!-- allow app to connect to the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".features.Pesawat" />
        <activity android:name=".features.Kereta" />
        <activity android:name=".features.Hotel" />
        <activity android:name=".features.Umroh" />
        <activity android:name=".features.Bus" />
        <activity android:name=".features.Travel" />
        <activity android:name=".features.PPOB" />
        <activity android:name=".features.Pulsa" />
        <activity android:name=".features.Tur" />
        <activity android:name=".features.Agen" />
        <activity android:name=".features.Kontak" />
    </application>

</manifest>